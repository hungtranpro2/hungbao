<div class="content-wrapper">
  <%= render partial: "shared/head_profile", locals: {path1: profile_path(@user), title: "Profile", link1: @user.name, link2: "Reset Password"}%>
  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3">
          <%= render partial: "shared/profile", object: @user %>
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="card">
            <div class="card-header p-2">
              <ul class="nav nav-pills">
                <li class="nav-item">
                  <%= link_to "Update Profile", edit_profile_path(@user), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "Reset Password", edit_reset_password_path(@user), class: "nav-link active" %>
                </li>
              </ul>
            </div><!-- /.card-header -->
            <div class="card-body">
              <div class="tab-content">
                <div class="active tab-pane" id="settings">
                  <div class="hold-transition login-page">
                    <div class="login-box">
                      <!-- /.login-logo -->
                      <div class="card">
                        <div class="card-body login-card-body">
                          <%= form_for @user, url: reset_password_path do |f|%>
                            <%= render "shared/error_messages", object: f.object %>
                            <div class="input-group mb-3">
                              <%= f.password_field :password, class: "form-control", placeholder:"Password" %>
                              <div class="input-group-append">
                                <div class="input-group-text">
                                  <span class="fas fa-lock"></span>
                                </div>
                              </div>
                            </div>
                            <div class="input-group mb-3">
                              <%= f.password_field :password_confirmation, class: "form-control", placeholder:"Retype Password" %>
                              <div class="input-group-append">
                                <div class="input-group-text">
                                  <span class="fas fa-lock"></span>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                              <div class="col-12">
                                <%= f.submit "Change password", class: "btn btn-primary btn-block" %>
                              </div>
                              <!-- /.col -->
                            </div>
                          <% end %>
                        </div>
                        <!-- /.login-card-body -->
                      </div>
                    </div>
                    </div>
                </div>
                <!-- /.tab-pane -->
              </div>
              <!-- /.tab-content -->
            </div><!-- /.card-body -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
