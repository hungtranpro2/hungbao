<div class="card" style="margin-top: 10px;">
  <div class="card-body">
    <div class="tab-content">
      <div class="active tab-pane" id="settings">

        <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Tên người gửi</label>
          </div>
          <div class="col-sm-10">
            <input type="email" class="form-control" disabled="disabled"  placeholder="<%= @request.user.name %>">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Email</label>
          </div>
          <div class="col-sm-10">
            <input type="email" class="form-control" disabled="disabled"  placeholder="<%= @request.user.email %>">
          </div>
        </div>

       <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Tiêu đề</label>
          </div>
          <div class="col-sm-10">
            <input type="workspace" class="form-control" disabled="disabled"  placeholder="<%= @request.title %>">
          </div>
        </div>


        <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Dự án</label>
          </div>
          <div class="col-sm-10">
            <input type="workspace" class="form-control" disabled="disabled"  placeholder="<%= @request.project.name %>">
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Thời gian gửi</label>
          </div>
          <div class="col-sm-10">
            <input type="workspace" class="form-control" disabled="disabled"  placeholder="<%= @request.created_at %>"></input>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-sm-2">
            <label class="col-form-label">Lý do</label>
          </div>
          <div class="col-sm-10">
            <textarea type="workspace" class="form-control" disabled="disabled"  placeholder="<%= @request.reason %>"></textarea>
          </div>
        </div>

      </div>
      <!-- /.tab-pane -->
    </div>
    <!-- /.tab-content -->
  </div><!-- /.card-body -->
</div>
