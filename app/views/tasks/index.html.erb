<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <%= render partial: "shared/head_profile", locals: {path1: company_project_tasks_path, title: "Manage Member", link1: "Manage Group", link2: "Member in Group"}%>

  <!-- Main content -->
  <section class="content">
    <div class="card-header row" style="margin: 10px 1px;">
      <div class="col-3">
        <%= link_to "Táº¡o Task", new_company_project_task_path, class: "btn btn-success" %>
      </div>

      <div class="card-tools col-9">
        <%= search_form_for @q, url: company_project_tasks_path, class: "form-inline" do |f| %>
          <%= f.search_field :name_cont, class: "form-control mr-sm-2", placeholder: "Search" %>
          <%= f.submit class: "btn btn-outline-success my-2 my-sm-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- Default box -->
    <div class="card" style="height: 500px;">
      <div class="card-header">
        <h3 class="card-title">Tasks</h3>
        <% if @tasks.blank? %>
          <h3 class="card-title" style="margin-left: 10px; color: red;">- No Data</h3>
        <% end %>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fas fa-times"></i></button>
        </div>
      </div>
      <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        Task Name
                    </th>
                    <th style="width: 20%">
                        Description
                    </th>
                    <th style="width: 10%">
                        Start Day
                    </th>
                    <th style="width: 10%">
                        End Day
                    </th>
                    <th style="width: 10%">
                      User
                    </th>
                    <th style="width: 10%">
                      Progress
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
              <%= render partial: "tasks/task", collection: @tasks %>
            </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <%= will_paginate @tasks%>
    <!-- /.card -->

  </section>
  <!-- /.content -->
</div>
