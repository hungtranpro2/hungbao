 <tr>
  <td style="width: 50px;"><%= user_counter + 1 %></td>
  <td>
    <%if user.avatar? %>
      <%= image_tag user.avatar.url, class: "img-circle img-size-32 mr-2" %>
    <% else %>
      <%= image_tag "avatar.png", class: "img-circle img-size-32 mr-2" %>
    <% end %>
    <%= user.name %>
  </td>
  <% if user.manager? %>
    <td><span class="badge badge-info"><%= user.role %></span></td>
  <% else %>
    <td><span class="badge badge-primary"><%= user.role %></span></td>
  <% end %>
  <td><%= user.skill %></td>
  <% if user.user_projects.count > 0 %>
    <td><span class="badge badge-info"><%= "#{user.user_projects.count} "+t(".project") %></span></td>
  <% else %>
    <td><span class="badge badge-warning"><%= "#{user.user_projects.count} "+t(".project") %></span></td>
  <% end %>
  <td>
    <% if user.tasks.present? %>
      <%= render partial: "division_members/task", collection: user.tasks.where(parent_task: true) %>
    <% end %>
  </td>
  <td class="project-actions text-right" style="max-width: 150px;">
    <%= link_to show_profile_path(user), {class: "btn btn-primary btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-eye">
      </i>
      <%= t".view"%>
    <% end %>
    <% if user.member? %>
      <%= link_to show_project_path(user), { class: "btn btn-success btn-sm", remote: true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
        <i class="fas fa-plus">
        </i>
        <%= t".add"%>
      <% end %>
    <% end %>
  </td>
</tr>
