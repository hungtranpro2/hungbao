 <tr>
  <td><%= user_counter + 1 %></td>
  <td>
    <%if user.avatar?%>
      <%= image_tag user.avatar.url, class: "img-circle img-size-32 mr-2" %>
    <%else%>
      <%= image_tag "user-5.png", class: "img-circle img-size-32 mr-2" %>
    <%end%>
    <%= user.name %>
  </td>
  <td><%= user.email %></td>
  <td><%= user.gender %></td>
  <td><%= user.division.name %></td>
  <td><%= user.role %></td>
  <td><%= user.phone %></td>
  <td class="project-actions text-right">
    <%= link_to show_profile_path(user), {class: "btn btn-primary btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-folder">
      </i>
      View
    <% end %>
    <%= link_to edit_user_manager_path(user), class: "btn btn-info btn-sm" do %>
      <i class="fas fa-pencil-alt">
      </i>
      Edit
    <% end %>
    <%= link_to user_manager_path(user), {method: :delete, class: "btn btn-danger btn-sm",data: {confirm: "Bạn chắc chứ"}} do %>
      <i class="fas fa-trash">
      </i>
      Delete
    <% end %>
  </td>
</tr>
