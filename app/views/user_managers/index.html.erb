<% provide(:title, t(".begin_title")) %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <%= render partial: "shared/head_profile", locals: {path1: user_managers_path, title: "Manage Member", link1: "Manage Group", link2: "Member in Group"}%>

  <!-- Main content -->
  <section class="content">
    <div class="card-header row" style="margin: 10px 1px;">
      <div style="margin-right: 20px;">
        <%= link_to new_user_manager_path, class: "btn btn-success" do %>
          <i class="fas fa-plus"></i>
          Táº¡o User
        <% end %>
      </div>

      <div>
        <%= search_form_for @q, url: user_managers_path, class: "form-inline" do |f| %>
          <%= f.search_field :name_or_email_cont, class: "form-control mr-sm-2", placeholder: "Search" %>
          <%= f.submit class: "btn btn-outline-success my-2 my-sm-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
    </div>
    <!-- Default box -->
    <div class="card">
      <div class="card-header">
        <h3 class="card-title">User</h3>
        <% if @users.blank? %>
          <h3 class="card-title" style="margin-left: 10px; color: red;">- No Data</h3>
        <% end %>
        <div class="card-tools">
          <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
            <i class="fas fa-minus"></i></button>
          <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
            <i class="fas fa-times"></i></button>
        </div>
      </div>
      <div class="card-body table-responsive p-0">
        <table class="table table-striped table-valign-middle">
            <thead>
            <tr>
              <th>#</th>
              <th>Member</th>
              <th>Email</th>
              <th>Gender</th>
              <th>Division</th>
              <th>Role</th>
              <th>Phone</th>
            </tr>
            </thead>
            <tbody>
              <%= render partial: "user_managers/user", collection: @users %>
            </tbody>
          </table>
      </div>
      <!-- /.card-body -->
    </div>
    <%= will_paginate @users%>
    <!-- /.card -->

  </section>
  <!-- /.content -->
</div>
