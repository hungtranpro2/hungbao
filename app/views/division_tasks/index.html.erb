<div class="content-wrapper">
   <%= render partial: "shared/head_profile", locals: {path1: overview_divisions_path, title: "Quản lý task dự án thuộc bộ phận", link1: "Quản lý bộ phận", link2: "Danh sách Tasks"}%>
    <section class="content">

      <div class="card">

        <div class="card-body">
          <div class="row">
            <div class="col-12 col-md-12 col-lg-12 order-2 order-md-1">
              <div class="row">
                <div class="col-md-12">
                  <div class="row float-right" style="margin: 0 0 10px 0px;">
                    <%= search_form_for @q, url: division_tasks_path, class: "form-inline", method: :get do |f| %>
                      <%= f.select :project_id_in, @projects.collect{|i| [i.name, i.id]}, {include_blank: "Choose Project"}, class: "form-control select mr-sm-2" %>
                      <%= f.search_field :user_name_or_title_cont_any, class: "form-control mr-sm-2", placeholder: "Search" %>
                      <%= f.submit class: "btn btn-outline-success my-2 mr-sm-2 my-sm-0" %>
                    <% end %>
                  </div>

                  <div class="card" style="width: 100%">
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                      <div class="table-responsive">
                        <table class="table m-0 table-striped projects">
                          <thead>
                          <tr style="color: #17a2b8;">
                            <th>#</th>
                            <th>Order ID</th>
                            <th>Project</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Project</th>
                            <th>Member</th>
                            <th>Status</th>
                            <th>Expected</th>
                            <th>Progress</th>
                            <th class="text-center">More</th>
                          </tr>
                          </thead>
                          <tbody>
                            <%= render partial: "division_tasks/task", collection: @tasks %>
                          </tbody>
                        </table>
                      </div>
                      <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                      <div id="pagina" class="btn btn-sm">
                        <%= link_to new_division_task_path, {class: "btn btn-sm btn-info float-left", remote: true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
                         <i class="fas fa-tasks"></i>
                          Thêm tasks cho dự án
                        <% end %>
                      </div>
                      <div class="float-right">
                        <%= will_paginate @tasks if @tasks %>
                      </div>
                    </div>
                    <!-- /.card-footer -->
                  </div>
                  <!-- /.card -->
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </section>
    <!-- /.content -->
  </div>
