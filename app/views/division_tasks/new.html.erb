<div class="content-wrapper" style="background: #FFFFFF">
  <!-- Content Header (Page header) -->
  <%= render partial: "shared/head_profile", locals: {path1: "#", title: "Manage User", link1: "Manage User", link2: "Create new a user"}%>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-9">
          <div class="card">
            <div class="card-body">
              <div class="tab-content">
                <div class="active tab-pane" id="settings">
                  <%= form_for(@task, url: division_tasks_path, class: "form-horizontal") do |f|%>
                    <%= render "shared/error_messages", object: f.object %>
                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :title, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_field :title, class: "form-control", placeholder:"Title" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :start_time, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-5">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                          <%= f.date_field :start_time, class: "form-control" %>
                        </div>
                      </div>

                      <%= f.label :lock, class: "col-sm-2 col-form-label" %>
                      <div class="col-sm-3">
                        <%= f.select :lock, lock_task_select,{}, {class: "form-control custom-select" }  %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :end_time, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-5">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="far fa-calendar-alt"></i></span>
                          <%= f.date_field :end_time, class: "form-control" %>
                        </div>
                      </div>

                      <%= f.label :progress, class: "col-sm-2 col-form-label" %>
                      <div class="col-sm-3">
                        <%= f.select :progress, progress_task_select.collect{|i| i}, {}, {class: "form-control custom-select" }  %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <%= f.label :project_id, class: "col-sm-2 col-form-label" %>
                      <div class="col-sm-4" style="padding-right: 0px;">
                        <%= f.select :project_id, project_tag.collect{|i| [i.name, i.id]}, {}, {class: "form-control custom-select" }  %>
                      </div>
                    </div>

                    <%= f.hidden_field :user_id, class: "form-control", value: "#{current_user.id}" %>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :path_github, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_field :path_github, class: "form-control", placeholder:"Link Pull Request" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :description, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_area :description, class: "form-control", placeholder:"Description" %>
                      </div>
                    </div>


                    <div class="form-group row">
                      <div class="offset-sm-2 col-sm-10">
                        <%= f.submit "Táº¡o Task", class: "btn btn-success" %>
                      </div>
                    </div>
                  <% end %>
                </div>
                <!-- /.tab-pane -->
              </div>
              <!-- /.tab-content -->
            </div><!-- /.card-body -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>

        <div class="col-12 col-md-3 card" style="background: #FAFAFA; padding-top: 10px;">
          <h3 class="text-primary"><i class="fas fa-paint-brush"></i> AdminLTE v3</h3>
          <p class="text-muted">Raw denim you probably haven't heard of them jean shorts Austin. Nesciunt tofu stumptown aliqua butcher retro keffiyeh dreamcatcher synth. Cosby sweater eu banh mi, qui irure terr.</p>
          <br>
          <div class="text-muted">
            <p class="text-sm">Client Company
              <b class="d-block">Deveint Inc</b>
            </p>
            <p class="text-sm">Project Leader
              <b class="d-block">Tony Chicken</b>
            </p>
          </div>

          <h5 class="mt-5 text-muted">Project files</h5>
          <ul class="list-unstyled">
            <li>
              <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-word"></i> Functional-requirements.docx</a>
            </li>
            <li>
              <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-pdf"></i> UAT.pdf</a>
            </li>
            <li>
              <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-envelope"></i> Email-from-flatbal.mln</a>
            </li>
            <li>
              <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-image "></i> Logo.png</a>
            </li>
            <li>
              <a href="" class="btn-link text-secondary"><i class="far fa-fw fa-file-word"></i> Contract-10_12_2014.docx</a>
            </li>
          </ul>
          <div class="text-center mt-5 mb-3">
            <a href="#" class="btn btn-sm btn-primary">Add files</a>
            <a href="#" class="btn btn-sm btn-warning">Report contact</a>
          </div>
        </div>

      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
