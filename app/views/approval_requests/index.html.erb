<% provide(:title, t(".begin_title")) %>
<div class="content-wrapper" style="height: 500px;">
  <% if current_division.is_project? && current_user.member? %>
    <%= render partial: "shared/head_profile", locals: {path1: overview_projects_path, title: "Phê duyệt yêu cầu của thành viên", link1: "Quản lý dự án", link2: "Danh sách yêu cầu"}%>
  <% elsif !current_division.is_project? && current_user.manager? %>
   <%= render partial: "shared/head_profile", locals: {path1: overview_divisions_path, title: "Phê duyệt yêu cầu của thành viên", link1: "Quản lý bộ phận", link2: "Danh sách yêu cầu"}%>
  <% end %>
  <section class="content">
    <div class="col-12">
    <div class="float-right" style="margin: 10px 15px;">
      <div class="row">
        <%= search_form_for @q, url: requests_path, class: "form-inline", method: :get do |f| %>
          <%= f.date_field :created_at_gteq, class: "form-control select" %>
          <%= f.date_field :created_at_lteq, class: "form-control select" %>
          <%= f.select :status_cont, raw(status_request_select), {include_blank: "Choose status"}, class: "form-control select" %>
          <%= f.search_field :personal_request_reason, class: "form-control mr-sm-2", placeholder: "Search" %>
          <%= f.submit class: "btn btn-outline-success my-2 my-sm-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
      </div>
     </div>
     <div class="card" style="width: 100%">
        <div class="card-header border-0" style="height: 40px;">
          <h3 class="card-title" style="font-weight: 700; margin-right: 10px;">Danh sách báo cáo</h3>
          <% if @requests.blank? %>
            <h5 class="card-title" style="font-weight: 600; color: #dc3545">(không có báo cáo nào)</h5>
          <% end %>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-striped table-valign-middle">
            <thead>
            <tr>
              <th>#</th>
              <th>Tiêu đề</th>
              <th>Dự án</th>
              <th>Người gửi</th>
              <th>Thời gian gửi</th>
              <th>Lý do</th>
              <th>Trạng thái</th>
              <th class="text-center">More</th>
            </tr>
            </thead>
            <tbody>
              <%= render partial: "approval_requests/request", collection: @requests %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @requests if @requests %>
    </div>
  </section>
  <!-- /.content -->
</div>
