<div class="content-wrapper">
  <section class="content">
    <%= render partial: "shared/head_profile", locals: {path1: reports_path, title: "Viết báo cáo", link1: "Danh sách báo cáo", link2: "Viết báo cáo cho dự án"}%>
    <div class="container-fluid">
      <div class="row">
        <!-- /.col -->
        <div class="col-md-2">
        </div>

        <div class="col-md-8">
          <div class="card" style="margin-top: 50px;">
            <div class="card-body">
              <div class="tab-content">
                <div class="active tab-pane" id="settings">
                  <%= form_for(@report, url: path, class: "form-horizontal") do |f|%>
                    <%= render "shared/error_messages", object: f.object %>
                    <div class="form-group row">
                      <%= f.label :project_id, class: "col-sm-2 col-form-label" %>
                      <div class="col-sm-10">
                        <% if my_group_select.blank? %>
                          <input class="form-control", readonly="readonly", value="Không có dự án nào!"/>
                        <% else %>
                          <%= f.select :project_id, my_group_select.collect{|i| [i.name, i.id]}, {} , {class: "form-control custom-select" }  %>
                        <% end %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :title, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_field :title, class: "form-control", placeholder:"Title" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :plan, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_area :plan, class: "form-control", placeholder:"Plan" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :actual, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_area :actual, class: "form-control", placeholder:"Actual" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :next_plan, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_area :next_plan, class: "form-control", placeholder:"Next Plan" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <div class="col-sm-2">
                        <%= f.label :issue, class: "col-form-label" %>
                      </div>
                      <div class="col-sm-10">
                        <%= f.text_area :issue, class: "form-control", placeholder:"Issue" %>
                      </div>
                    </div>

                    <div class="form-group row">
                      <% if my_group_select.present? %>
                        <div class="offset-sm-2 col-sm-10">
                          <%= f.submit "Tạo báo cáo", class: "btn btn-success" %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <!-- /.tab-pane -->
              </div>
              <!-- /.tab-content -->
            </div><!-- /.card-body -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->

        <div class="col-md-2">
        </div>

      </div>
      <!-- /.row -->
    </div><!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
