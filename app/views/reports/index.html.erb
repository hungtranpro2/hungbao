<% provide(:title, t(".begin_title")) %>
<div class="content-wrapper" style="height: 500px;">
  <%= render partial: "shared/head_profile", locals: {path1: "#", title: "Yêu cầu thành viên cho dự án", link1: "Thành viên của dự án", link2: "Yêu cầu thành viên cho dự án"}%>
  <section class="content">
    <div class="col-12">
    <div class="float-right" style="margin: 10px 15px;">
      <div class="row">
        <div style="margin-right: 50px;">
          <%= link_to new_report_path, class: "btn btn-success" do %>
            <i class="fas fa-plus"></i>
            Viết báo cáo
          <% end %>
        </div>
        <%= search_form_for @q, url: reports_path, class: "form-inline" do |f| %>
          <%= f.search_field :title_cont, class: "form-control mr-sm-2", placeholder: "Search" %>
          <%= f.submit class: "btn btn-outline-success my-2 my-sm-0" do %>
            <i class="fas fa-search"></i>
          <% end %>
        <% end %>
        <div style="margin-left: 10px;">
          <%= form_tag reports_path, class: "form-inline", method: :get do |f| %>
            <%= select_tag :project, raw(@projects.collect {|i| "<option>#{i.name}</option>"}) , {include_blank: "Choose date", class: "form-control select", onchange: "this.form.submit()"} %>
          <% end %>
        </div>
      </div>

    </div>
     <div class="card" style="width: 100%">
        <div class="card-header border-0" style="height: 40px;">
          <h3 class="card-title"><b>Danh sách báo cáo</b></h3>
          <% if @reports.blank? %>
            <h3 class="card-title text-danger" style="margin-left: 30px;"><b>không có báo cáo nào</b></h3>
          <% end %>
        </div>
        <div class="card-body table-responsive p-0">
          <table class="table table-striped table-valign-middle">
            <thead>
            <tr>
              <th>#</th>
              <th>Tên dự án</th>
              <th>Ngày khởi tạo</th>
              <th>Kế hoạch</th>
              <th>Thực tế</th>
              <th>Kế hoạch tới</th>
              <th>Vấn đề</th>
              <th class="text-center">More</th>
            </tr>
            </thead>
            <tbody>
              <%= render partial: "reports/report", collection: @reports %>
            </tbody>
          </table>
        </div>
      </div>
      <%= will_paginate @users if @users %>
    </div>
  </section>
  <!-- /.content -->
</div>
