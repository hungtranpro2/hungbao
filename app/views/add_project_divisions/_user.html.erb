 <tr>
  <td><%= user_counter + 1 %></td>
  <td>
    <%if user.avatar?%>
      <%= image_tag user.avatar.url, class: "img-circle img-size-32 mr-2" %>
    <%else%>
      <%= image_tag "avatar.png", class: "img-circle img-size-32 mr-2" %>
    <%end%>
   <%= user.name %>
  </td>
  <td><%= user.division.name %></td>
  <td><%= user.skill %></td>
  <td><%= "#{user.user_projects.count} " + t(".project") %></td>
  <td class="project-actions text-right">
    <% if @project.users.where(id: user.id).blank?%>
      <%= link_to add_project_divisions_path(user_id: user.id, project_id: @project.id),{ class: "btn btn-success btn-sm", method: :post } do %>
        <i class="fas fa-plus">
        </i>
        <%= t ".add"%>
      <% end %>
    <% end %>
  </td>
</tr>
