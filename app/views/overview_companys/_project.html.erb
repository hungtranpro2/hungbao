<tr class="hidden_content">
  <td><%= project_counter + 1 %></td>
  <td><%= project.name %></td>
  <td><%= project.client_company %></td>
  <td><%= project.document_link %></td>
  <td><%= project.description %></td>
  <td><b class="text-success"><%= "#{expected_project(project)} %" %></b></td>

  <td><b class="text-danger"><%= "#{progress_project(project)} %" %></b></td>

  <td class="project-actions text-right" style="max-width: 150px;">
    <%= link_to company_project_path(project), {class: "btn btn-sm btn-info", remote: true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-eye">
      </i>
      <%= t".describe"%>
    <% end %>
  </td>
</tr>
