<tr>
  <td><%= user_counter +1 %></td>
  <td>
    <%= image_tag "user.jpg", class: "img-circle img-size-32 mr-2" %>
    <%= user.name %>
  </td>
  <td><%= user.division.name %></td>
  <td><%= user.role %></td>
  <td><%= user.position %></td>
  <td>
    <small class="text-success mr-1">
      <i class="fas fa-arrow-up"></i>
      12%
    </small>
    12,000 Hours
  </td>
  <td>2 project</td>
  <td>
    <% if user.status == "busy" %>
      <span class="badge badge-success" style="background: #dc3545;"><%= user.status %></span>
    <% elsif user.status == "medium" %>
      <span class="badge badge-success" style="background: #6c757d;"><%= user.status %></span>
    <% else %>
      <span class="badge badge-success"><%= user.status %></span>
    <% end %>
  </td>
  <td class="project-actions text-right">
    <%= link_to "#", class: "btn btn-primary btn-sm" do %>
      <i class="fas fa-folder">
      </i>
      View
    <% end %>
    <% if user.division_id != current_division.id && user.role != "manager" %>
      <%= link_to project_member_path(user_id: user.id, project_id: @project.id), {method: :delete, class: "btn btn-danger btn-sm",data: {confirm: "Bạn chắc xóa thành viên này chứ"}} do %>
        <i class="fas fa-trash">
        </i>
        Delete
      <% end %>
    <% end %>
  </td>
</tr>
