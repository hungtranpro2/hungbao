 <tr class="hidden_content">
  <td style="width: 50px;"><%= user_counter + 1 %></td>
  <td>
    <%if user.avatar? %>
      <%= image_tag user.avatar.url, class: "img-circle img-size-32 mr-2" %>
    <% else %>
      <%= image_tag "avatar.png", class: "img-circle img-size-32 mr-2" %>
    <% end %>
    <%= user.name %>
  </td>
  <td><%= user.division.name %></td>
  <td>
    <% if user.manager? && !user.division.is_project? %>
      <span class="badge badge-info">team leader</span>
    <% elsif user.member? && user.division.is_project? %>
      <span class="badge badge-danger">project leader</span>
    <% else %>
      <span class="badge badge-success">team member</span>
    <% end %>
  </td>
  <td><%= user.skill %></td>
  <td><%= "#{user.user_projects.count} Project" %></td>
  <td>
    <% if user.member? && !user.division.is_project? %>
      <% if user.tasks.blank? %>
        <span class="badge badge-info">work empty</span>
      <% else %>
        <% if (user.tasks.where(parent_task: true).first.progress - 100) > 0 %>
          <b class="text-success">
            <i class="fas fa-caret-up"></i>
            <%= "#{user.tasks.where(parent_task: true).first.progress - 100} %"%>
          </b>
        <% elsif (user.tasks.where(parent_task: true).first.progress - 100) < 0%>
           <b class="text-danger">
            <i class="fas fa-caret-down"></i>
            <%= "#{user.tasks.where(parent_task: true).first.progress - 100} %"%>
          </b>
        <% else %>
           <b class="text-warning">
            <i class="fas fa-caret-left"></i>
            <%= "#{user.tasks.where(parent_task: true).first.progress - 100} %"%>
          </b>
        <% end %>
      <% end %>
    <% else %>
       <span class="badge badge-danger">manage</span>
    <% end %>
  </td>
  <td class="project-actions text-right" style="max-width: 150px;">
    <%= link_to show_profile_path(user.id), {class: "btn btn-primary btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-eye">
      </i>
      Xem
    <% end %>
    <% if user.member? && !user.division.is_project? %>
      <%= link_to "#", class: "btn btn-success btn-sm" do %>
        <i class="fas fa-plus">
        </i>
        Yêu cầu thêm
      <% end %>
      <%= link_to "#", class: "btn btn-danger btn-sm" do %>
        <i class="fas fa-plus">
        </i>
        Yêu cầu xóa
      <% end %>
    <% end %>
  </td>
</tr>
