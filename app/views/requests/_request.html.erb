<tr>
  <td><%= request_counter + 1 %></td>
  <td><%= request.created_at %></td>
  <td><%= request.request_type %></td>
  <td><%= request.reason %></td>
  <td  class="hidden_content"><%= "#{request.time_from} - #{request.time_to}" %></td>
  <td>
    <span class="badge badge-success"><%= request.status %></span>
  </td>
  <td class="project-actions text-right">
    <%= link_to request_path(request), {class: "btn btn-primary btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-folder">
      </i>
      View
    <% end %>
    <%= link_to edit_request_path(request),{ class: "btn btn-info btn-sm"} do %>
      <i class="fas fa-pencil-alt">
      </i>
      Edit
    <% end %>

     <%= link_to request_path(request), { class: "btn btn-danger btn-sm", method: :delete, data:{ confirm: "Bạn có chắc xóa yêu cầu này"}} do %>
      <i class="fas fa-trash">
      </i>
      Delete
    <% end %>
  </td>
</tr>
