<tr>
  <td><%= request_counter + 1 %></td>
  <td><%= request.title %></td>
  <td><%= request.project.name %></td>
  <td><%= request.created_at %></td>
  <td><%= request.reason %></td>
  <td>
    <% if request.status == "waiting" %>
      <span class="badge badge-primary"><%= request.status %></span>
    <% elsif request.status == "approval" %>
      <span class="badge badge-success"><%= request.status %></span>
    <% elsif request.status == "rejected" %>
      <span class="badge badge-danger"><%= request.status %></span>
    <% else %>
      <span class="badge badge-info"><%= request.status %></span>
    <% end %>
  </td>
  <td class="project-actions text-right">
    <%= link_to request_path(request), {class: "btn btn-primary btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
      <i class="fas fa-eye">
      </i>
      View
    <% end %>

    <% if request.status == "waiting" %>
      <%= link_to edit_request_path(request),{class: "btn btn-info btn-sm", remote: :true, "data-toggle": "modal", "data-target": "#show_dialog"} do %>
        <i class="fas fa-pencil-alt">
        </i>
        Edit
      <% end %>

       <%= link_to request_path(request), { class: "btn btn-danger btn-sm", method: :delete, data:{ confirm: "Bạn có chắc xóa yêu cầu này"}} do %>
        <i class="fas fa-trash">
        </i>
        Delete
      <% end %>
    <% end %>
  </td>
</tr>
